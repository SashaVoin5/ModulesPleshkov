<Window x:Class="ModulesPleshkov.Zadacha3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModulesPleshkov"
        mc:Ignorable="d"
        Title="Zadacha3" Height="450" Width="800">
    <Grid>
        <Button Content="Результат" HorizontalAlignment="Center" Margin="0,338,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="147,109,0,0" Text="Дано N целых чисел. Требуется выбрать из них три таких числа, произведение которых максимально" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_input" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_output" HorizontalAlignment="Center" Margin="0,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" IsEnabled="False" Text="Результат"/>
        <Label Content="Введите целые числа" HorizontalAlignment="Left" Margin="181,213,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
